<Window x:Class="BatchRename.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="412,46,0,0" VerticalAlignment="Top" Width="95" Height="35" Click="addButton_Click"/>
        <ListView x:Name="filesListView" HorizontalAlignment="Left" Height="170" Margin="127,81,0,0" VerticalAlignment="Top" Width="380">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Path" Width="255" DisplayMemberBinding="{Binding Path}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="403,256,0,0" VerticalAlignment="Top" Width="104" Height="40" Click="startButton_Click"/>

    </Grid>
</Window>
